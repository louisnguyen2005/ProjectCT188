
        .slider {
            position: relative;
            width: 80%;
            max-width: 600px;
            margin: 20px auto;
            overflow: hidden;
            border: 2px solid #ccc;
            border-radius: 10px;
        }

        .slides {
            display: flex;
            transition: transform 0.5s ease-in-out;
            width: 100%;
        }

        .slides img {
            width: 100%;
            border: 0;
            user-select: none;
        }

        .prev, .next {
            cursor: pointer;
            position: absolute;
            top: 50%;
            width: auto;
            padding: 10px;
            margin-top: -22px;
            color: white;
            font-weight: bold;
            font-size: 18px;
            background-color: rgba(0, 0, 0, 0.5);
            border: none;
            border-radius: 50%;
            user-select: none;
        }

        .prev {
            left: 10px;
        }

        .next {
            right: 10px;
        }
    


        
        let slideIndex = 0;

        function showSlide(index) {
            const slides = document.querySelector('.slides');
            const totalSlides = slides.children.length;
            if (index >= totalSlides) {
                slideIndex = 0;
            } else if (index < 0) {
                slideIndex = totalSlides - 1;
            } else {
                slideIndex = index;
            }
            const slideWidth = slides.children[0].clientWidth;
            slides.style.transform = `translateX(${-slideIndex * slideWidth}px)`;
        }

        function moveSlide(step) {
            showSlide(slideIndex + step);
        }

        // Hiển thị slide đầu tiên khi tải trang
        window.onload = () => {
            showSlide(slideIndex);
        };
        // style="width: 150px; height: 15px; object-fit: cover" 